<% if @task.errors.present? %>
  <ul>
    <% @task.errors.each do |error, message| %>
      <li>
        <%= "#{error.capitalize} #{message}" %>
      </li>
    <% end %>
  </ul>
<% end %>

 <!-- 套用Bootstrap Framework 優化 UI 介面 -->

<div class="form container">
  <%= form_for (@task) do |f| %>

   <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
   </div> 

   <div class="form-group">  
    <%= f.label :due_date, "Due Date" %>
    <%= f.text_field :due_date %>
   </div> 

   <div class="form-group">   
    <%= f.label :note, "Note" %>
    <%= f.text_field :note %>
   </div>  

    <%= f.submit %>
    <br>
    <br>

     <%= link_to "<span class='glyphicon glyphicon-home'></span>  Back to Home ".html_safe, tasks_path, class: "btn btn-primary btn-lg btn-block" %> 

  <% end %>
</div>







